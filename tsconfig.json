{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"]
  },
  "typedocOptions": {
    "inputFiles": ["./src/"],
    "mode": "modules",
    "out": "docs"
  },
  "include": ["./src", "./src/.d.ts"],
  "exclude": ["./node_modules", "./dist", "**/*.test.ts"]
}
